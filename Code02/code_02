def convertToTuple():
    openFile = open('test.txt','r')
    textFile = openFile.read().splitlines()
    
    newList=list()
    temp=list()
    for i in textFile:
        if(i == ''):
            newList.append(temp)
            temp=list()
        else:
            temp.append(int(i))
    
    return tuple(map(tuple,newList))

#mostCalories = lambda tupleCalories : max([sum(i) for i in tupleCalories])

#MaxAmountOfCaloriesByTotal
totalCalories = lambda tupleCalories : [sum(i) for i in tupleCalories]
mostCalories = lambda tupleCalories : max(totalCalories(tupleCalories))
mostCaloriesIndex = lambda tupleCalories : totalCalories(tupleCalories).index(mostCalories(tupleCalories))

#Test
tuple00 = ((1000,2000,3000), (4000,),(5000,6000), (7000,8000,9000), (10000,))
tuple01 = convertToTuple()
print(f"The person in the position {mostCaloriesIndex(tuple01)} has gotten over {mostCalories(tuple01)} calories.")